<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="id.brian.smssecure.app.MainActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_gravity="center"
                android:id="@+id/imageView2"
                android:src="@drawable/sms_secure_icon"
                />
        </LinearLayout>
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tableLayout">


            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginBottom="10sp"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/aa">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/sendicon"
                        android:id="@+id/imageButton1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Tulis Pesan"
                        android:id="@+id/textView"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/bb">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/incepticon"
                        android:id="@+id/imageButton2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Kotak Masuk"
                        android:id="@+id/textView"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginBottom="10sp"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/senticon"
                        android:id="@+id/imageButton3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Kotak Keluar"
                        android:id="@+id/textView"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/wrench"
                        android:id="@+id/imageButton4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Pengaturan"
                        android:id="@+id/textView"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginBottom="10sp"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/help_2"
                        android:id="@+id/imageButton5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Bantuan"
                        android:id="@+id/textView"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/wrench"
                        android:id="@+id/imageView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Pengaturan"
                        android:id="@+id/textView"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

    </LinearLayout>




</ScrollView>
